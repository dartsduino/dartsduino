<% provide(:title, "Forgot password") %>

<div class="container">
  <h1>Forgot your password?</h1>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :login, "Name or email", class: "col-lg-4 control-label", for: "inputLogin" %>

      <div class="col-lg-4">
        <%= f.text_field :login, class: "form-control", id: "inputLogin", :autofocus => true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-4 col-lg-6">
        <%= f.submit 'Send me reset password instructions', class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <div class="col-lg-offset-4 col-lg-6">
    <%= render "devise/shared/links" %>
  </div>
</div>
